---
import Layout from '@/layouts/Layout.astro';

const title = 'How iHousing Manages Your Parkland Avenue Unit';
const description = 'Comprehensive guide to iHousing Airbnb property management services for Parkland Avenue. From listing creation to guest communication, we handle everything for a flat RM200-300/month.';
const image = 'https://parklandgroup.my/wp-content/uploads/2022/03/08_OverallDevelopment_op1_HR-copy.jpg';
