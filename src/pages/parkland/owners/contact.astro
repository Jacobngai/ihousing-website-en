---
import Layout from '@/layouts/Layout.astro';

const title = 'Contact iHousing for Parkland Avenue Airbnb Management';
const description = 'Get in touch with iHousing for professional Airbnb property management at Parkland Avenue by the Sea. Free consultation and flat RM200-300/month management fee.';
const image = 'https://parklandgroup.my/wp-content/uploads/2022/03/08_OverallDevelopment_op1_HR-copy.jpg';
---

<Layout title={title} description={description} image={image}>
  <main>
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-indigo-900 via-indigo-800 to-pink-900 text-white py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <p class="text-pink-300 font-semibold mb-4">CONTACT US</p>
          <h1 class="text-4xl lg:text-5xl font-bold mb-6">
            Start Earning More with Your Parkland Avenue Unit
          </h1>
          <p class="text-xl text-pink-100 max-w-4xl mx-auto mb-8">
            Get a free consultation to learn how iHousing can help you maximize your
            Airbnb income with our flat RM200-300/month management fee.
          </p>
        </div>
      </div>
    </section>

    <!-- Contact Form -->
    <section class="py-16 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-gray-50 p-8 rounded-2xl">
          <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">
            Owner Inquiry Form
          </h2>
          <p class="text-lg text-gray-600 mb-8 text-center">
            Fill in your details and our property management consultant will contact you
            within 24 hours to discuss how to maximize your Parkland Avenue returns.
          </p>

          <form id="ownerContactForm" class="space-y-6">
            <!-- Name -->
            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2">
                Name *
              </label>
              <input
                type="text"
                name="name"
                required
                placeholder="Your full name"
                class="w-full p-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
              />
            </div>

            <!-- Phone Number -->
            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2">
                Phone Number *
              </label>
              <input
                type="tel"
                name="phone"
                required
                placeholder="+60 12 3456 7890"
                class="w-full p-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
              />
              <p class="text-sm text-gray-500 mt-1">
                We'll contact you with personalized information
              </p>
            </div>

            <!-- Email (Optional) -->
            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2">
                Email (Optional)
              </label>
              <input
                type="email"
                name="email"
                placeholder="your@email.com"
                class="w-full p-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
              />
            </div>

            <!-- Unit Type -->
            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2">
                Unit Type at Parkland Avenue *
              </label>
              <select
                name="unitType"
                required
                class="w-full p-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
              >
                <option value="">Select unit type</option>
                <option value="type-a">Type A - 635 sqft (1+1 BR)</option>
                <option value="type-b">Type B - 796 sqft (2 BR)</option>
                <option value="type-c">Type C - 972 sqft (3 BR)</option>
                <option value="type-d">Type D - 818 sqft (2 BR Premium)</option>
                <option value="type-e">Type E - 1,002 sqft (3 BR Luxury)</option>
                <option value="multiple">Multiple units</option>
              </select>
            </div>

            <!-- Current Status -->
            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2">
                Current Status *
              </label>
              <select
                name="status"
                required
                class="w-full p-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
              >
                <option value="">Select current status</option>
                <option value="own-unit">Own a unit at Parkland Avenue</option>
                <option value="considering">Considering purchase at Parkland Avenue</option>
                <option value="not-sure">Just exploring options</option>
              </select>
            </div>

            <!-- Investment Timeline -->
            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2">
                Investment Timeline
              </label>
              <select
                name="timeline"
                class="w-full p-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
              >
                <option value="">Select timeline (optional)</option>
                <option value="immediate">Ready to start immediately</option>
                <option value="6-months">Within 6 months</option>
                <option value="1-year">Within 1 year</option>
                <option value="exploring">Just exploring</option>
              </select>
            </div>

            <!-- Message -->
            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2">
                Message or Questions (Optional)
              </label>
              <textarea
                name="message"
                rows="4"
                placeholder="Any specific questions about property management, expected income, or timeline?"
                class="w-full p-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
              ></textarea>
            </div>

            <!-- Submit Button -->
            <button
              type="submit"
              class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-4 rounded-xl text-xl transition-colors"
            >
              Submit Inquiry
            </button>
          </form>
        </div>
      </div>
    </section>

