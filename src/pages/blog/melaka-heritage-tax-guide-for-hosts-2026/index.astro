import BlogPost from '@/layouts/BlogPost.astro';

const title = "Melaka Heritage Tax Guide for Airbnb Hosts (2026)";
const description = "Confused about the Heritage Charge and Tourism Tax? Here is the complete 2026 guide for Melaka Airbnb hosts on what to collect, how to file, and the penalties for non-compliance.";
const image = "/images/blog/melaka-heritage-tax-2026.jpg";
