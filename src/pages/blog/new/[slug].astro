---
/**
 * Dynamic Blog Post Page - English (NEW posts from content collections)
 * Old posts remain in /en/blog/[folder]/index.astro
 * New posts go to /en/blog/new/[slug]
 */
import { getCollection } from 'astro:content';
import BlogPostMD from '@/layouts/BlogPostMD.astro';

export async function getStaticPaths() {
  const allPosts = await getCollection('blogs');
  return allPosts
    .filter(post => post.data.locale === 'en' && !post.data.draft)
    .map(post => ({
      params: { slug: post.slug.replace('en/', '') },
      props: { post },
    }));
}

const { post } = Astro.props;
---

<BlogPostMD post={post} />
