import BlogPost from '@/layouts/BlogPost.astro';

const title = "Standard Pembersihan: Bagaimana iHousing Memastikan Kualiti Konsisten";
const description = "Standard pembersihan iHousing memastikan kualiti konsisten untuk setiap tetamu. Ketahui proses kami, checklist 50 perkara, dan mengapa pemilik hartanah mempercayai kami.";
const date = "2026-01-26";
const category = "management";
