---
import BlogPost from '@/layouts/BlogPost.astro';

const title = "Kepentingan Pelayaran Sungai: Pengalaman Melaka River";
const description = "Bagaimana hartanah berhampiran tarikan pelayaran sungai Melaka mengenakan kadar premium. Data menunjukkan tempahan 35% lebih tinggi untuk hartanah pemandangan sungai.";
const date = "2026-01-21";
const category = "marketing";
const language = "ms";
const image = "/images/blog/river-cruise-proximity.jpg";

const content = `
