        <table>
          <thead>
            <tr><th>Metrik</th><th>Urus Sendiri</th><th>Syarikat (Komisen)</th><th>Syarikat (Yuran Tetap)</th></tr>
          </thead>
          <tbody>
            <tr><td>Pendapatan 3 tahun</td><td>RM30,000</td><td>RM30,000</td><td>RM30,000</td></tr>
            <tr><td>Kos</td><td>RM26,820</td><td>RM6,000</td><td>RM9,000</td></tr>
            <tr><td>**Pendapatan Bersih**</td><td>**RM3,180**</td><td>**RM24,000**</td><td>**RM21,000**</td></tr>
            <tr><td>Masa diperlukan</td><td>20 jam/minggu</td><td>0 jam</td><td>0 jam</td></tr>
            <tr><td>Tekanan</td><td>Tinggi</td><td>Rendah</td><td>Rendah</td></tr>
          </tbody>
