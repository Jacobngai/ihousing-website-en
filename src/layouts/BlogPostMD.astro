---
/**
 * BlogPostMD Layout - For Content Collection markdown posts
 * Used by dynamic routes for NEW blog posts
 */
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'blogs'>;
}

const { post } = Astro.props;
const { Content } = await post.render();

const { title, description, publishDate, category, locale, ogImage, author } = post.data;
const siteUrl = import.meta.env.PUBLIC_SITE_URL || 'https://ihousing.com.my';
const image = ogImage || `${siteUrl}/images/og-default.jpg`;
const date = typeof publishDate === 'string' ? publishDate : publishDate.toISOString().split('T')[0];

// Get language-specific labels
const labels = {
  en: {
    backToBlog: '← Back to Blog',
    published: 'Published',
    home: 'Home',
    blog: 'Blog',
    contactUs: 'Contact Us',
    readyToStart: 'Ready to Start Your Airbnb Journey?',
    contactDesc: 'Contact iHousing today for a free consultation about your Melaka property.',
    contactNow: 'Contact Us Now'
  },
  ms: {
    backToBlog: '← Kembali ke Blog',
    published: 'Diterbitkan',
    home: 'Utama',
    blog: 'Blog',
    contactUs: 'Hubungi Kami',
    readyToStart: 'Bersedia untuk Memulakan Perjalanan Airbnb Anda?',
    contactDesc: 'Hubungi iHousing hari ini untuk konsultasi percuma mengenai hartanah Melaka anda.',
    contactNow: 'Hubungi Kami Sekarang'
  },
  zh: {
    backToBlog: '← 返回博客',
    published: '发布于',
    home: '首页',
    blog: '博客',
    contactUs: '联系我们',
    readyToStart: '准备开始您的Airbnb之旅？',
    contactDesc: '今天联系iHousing，免费咨询您在马六甲的房产。',
    contactNow: '立即联系我们'
  }
};

const t = labels[locale as keyof typeof labels] || labels.en;
const langPath = locale;
const contactFormLink = `/${langPath}/contact-form/`;

// Schema markup
const schema = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": title,
  "description": description,
  "image": image,
  "datePublished": date,
  "dateModified": date,
  "author": {
    "@type": "Organization",
    "name": author || "iHousing Melaka"
  },
  "publisher": {
    "@type": "Organization",
    "name": "iHousing Melaka",
    "logo": {
      "@type": "ImageObject",
      "url": `${siteUrl}/logo.png`
    }
  }
};
---

<!DOCTYPE html>
<html lang={locale} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:type" content="article" />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="article:published_time" content={date} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <!-- Schema.org -->
    <script type="application/ld+json" set:html={JSON.stringify(schema)} />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=Merriweather:ital,wght@0,300;0,400;0,700;1,400&display=swap" rel="stylesheet" />
  </head>

  <body class="antialiased font-sans bg-gray-50 text-gray-900">
    <!-- Header -->
    <header class="bg-white border-b border-gray-200 sticky top-0 z-50 shadow-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <a href={`/${langPath}/`} class="text-2xl font-bold text-green-800">iHousing</a>
          <nav class="hidden md:flex items-center space-x-6">
            <a href={`/${langPath}/`} class="text-gray-700 hover:text-green-700 font-medium">{t.home}</a>
            <a href={`/${langPath}/blog/`} class="text-gray-700 hover:text-green-700 font-medium">{t.blog}</a>
            <a href={contactFormLink} class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg font-semibold transition-colors">
              {t.contactUs}
            </a>
          </nav>
        </div>
      </div>
    </header>

    <!-- Hero Section -->
    <div class="bg-gradient-to-br from-green-800 to-green-900 text-white py-16 md:py-24">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <a href={`/${langPath}/blog/`} class="inline-flex items-center text-green-200 hover:text-white mb-6 transition-colors">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          {t.backToBlog}
        </a>

        <div class="flex items-center gap-3 mb-4">
          <span class="inline-block px-3 py-1 bg-green-700 text-green-100 text-sm font-semibold rounded-full">
            {category}
          </span>
          <span class="text-green-200 text-sm">
            {t.published}: {date}
          </span>
        </div>

        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight mb-4">
          {title}
        </h1>

        <p class="text-xl text-green-100">
          {description}
        </p>
      </div>
    </div>

    <!-- Article Content -->
    <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-16">
      <div class="bg-white rounded-2xl shadow-lg p-8 md:p-12">
        <div class="prose prose-lg md:prose-xl max-w-none blog-content">
          <Content />
        </div>
      </div>

      <!-- CTA Section -->
      <div class="mt-12 bg-gradient-to-br from-green-50 to-green-100 rounded-2xl p-8 md:p-12 text-center">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-4">
          {t.readyToStart}
        </h2>
        <p class="text-gray-700 mb-6 text-lg">
          {t.contactDesc}
        </p>
        <a
          href={contactFormLink}
          class="inline-flex items-center bg-green-600 hover:bg-green-700 text-white px-8 py-4 rounded-xl font-semibold text-lg transition-all shadow-lg hover:shadow-xl"
        >
          {t.contactNow}
        </a>
      </div>
    </article>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white py-12 mt-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <p class="text-xl font-bold mb-2">iHousing</p>
        <p class="text-gray-400">Professional Airbnb property management in Melaka</p>
        <p class="mt-4 text-gray-500">&copy; {new Date().getFullYear()} iHousing. All rights reserved.</p>
      </div>
    </footer>

    <style is:global>
      .blog-content { font-family: 'Merriweather', Georgia, serif; color: #1f2937; line-height: 1.8; }
      .blog-content h1, .blog-content h2, .blog-content h3, .blog-content h4 { font-family: 'Inter', system-ui, sans-serif; font-weight: 700; color: #111827; margin-top: 2em; margin-bottom: 0.5em; }
      .blog-content h2 { font-size: 1.75rem; }
      .blog-content h3 { font-size: 1.5rem; }
      .blog-content p { margin-bottom: 1.25em; font-size: 1.125rem; }
      .blog-content a { color: #059669; text-decoration: underline; }
      .blog-content a:hover { color: #047857; }
      .blog-content strong { font-weight: 700; color: #111827; }
      .blog-content ul, .blog-content ol { margin: 1.5em 0; padding-left: 1.5em; }
      .blog-content li { margin-bottom: 0.5em; font-size: 1.125rem; }
      .blog-content ul { list-style-type: disc; }
      .blog-content ol { list-style-type: decimal; }
      .blog-content blockquote { margin: 2em 0; padding: 1em; border-left: 4px solid #059669; background: #ecfdf5; font-style: italic; }
      .blog-content code { background: #f3f4f6; padding: 0.2em 0.4em; border-radius: 0.25rem; font-size: 0.9em; }
      .blog-content pre { background: #1f2937; color: #f9fafb; padding: 1.5em; border-radius: 0.5rem; overflow-x: auto; margin: 2em 0; }
      .blog-content table { width: 100%; margin: 2em 0; border-collapse: collapse; }
      .blog-content th, .blog-content td { padding: 0.75rem; text-align: left; border-bottom: 1px solid #e5e7eb; }
      .blog-content th { background: #059669; color: white; font-weight: 600; }
    </style>
  </body>
</html>
